<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.surveyapp.fragments.createTab.CreateSurveyFragment">

    <data>
        <variable
            name="createSurveyViewModel"
            type="com.example.surveyapp.fragments.createTab.CreateSurveyViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewFragmentHeader">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/Revenue" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="@string/Capital"
                android:layout_marginRight="10dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewSurveyInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:text="@string/Survey_Information"
            app:layout_constraintBottom_toTopOf="@+id/textViewSurveyName"
            app:layout_constraintEnd_toStartOf="@+id/radioGroup"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginLeft="156dp" />

        <TextView
            android:id="@+id/textViewFragmentHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup"
            app:layout_constraintStart_toStartOf="@+id/radioGroup"
            app:layout_constraintTop_toTopOf="parent" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="0dp"
            android:layout_height="306dp"
            android:layout_marginTop="63dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="103dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewCalenderHeader"
            android:layout_marginRight="36dp" />

        <TextView
            android:id="@+id/textViewCalenderHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Date_Of_Survey"
            app:layout_constraintBottom_toTopOf="@+id/calendarView"
            app:layout_constraintEnd_toEndOf="@+id/calendarView"
            app:layout_constraintStart_toEndOf="@+id/radioGroup"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textViewSurveyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:text="TextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextSurveyName"
            app:layout_constraintEnd_toStartOf="@+id/textViewSurveyInfoHeader"
            android:layout_marginRight="36dp" />

        <EditText
            android:id="@+id/editTextSurveyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="124dp"
            android:ems="10"
            android:text="@={createSurveyViewModel.surveyName}"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/editTextAddress"
            app:layout_constraintEnd_toStartOf="@+id/calendarView"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textViewSurveyInfoHeader"
            app:layout_constraintTop_toBottomOf="@+id/textViewSurveyInfoHeader"
            android:layout_marginRight="124dp" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:text="TextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextAddress"
            app:layout_constraintEnd_toStartOf="@+id/textViewSurveyInfoHeader"
            app:layout_constraintStart_toStartOf="@+id/textViewSurveyName"
            android:layout_marginRight="36dp" />

        <TextView
            android:id="@+id/textViewPostCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="36dp"
            android:text="TextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextPostCode"
            app:layout_constraintEnd_toStartOf="@+id/textViewSurveyInfoHeader"
            app:layout_constraintStart_toStartOf="@+id/textViewAddress"
            android:layout_marginRight="36dp" />

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="28dp"
            android:text="TextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextPhoneNumber"
            app:layout_constraintEnd_toStartOf="@+id/textViewSurveyInfoHeader"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewPostCode"
            android:layout_marginRight="28dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBaseline_toBaselineOf="@+id/editTextDate"
            app:layout_constraintEnd_toStartOf="@+id/textViewSurveyInfoHeader"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewPhoneNumber" />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={createSurveyViewModel.address}"
            app:layout_constraintBottom_toTopOf="@+id/editTextPostCode"
            app:layout_constraintEnd_toStartOf="@+id/calendarView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/editTextSurveyName"
            app:layout_constraintTop_toBottomOf="@+id/editTextSurveyName" />

        <EditText
            android:id="@+id/editTextPostCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={createSurveyViewModel.postCode}"
            app:layout_constraintBottom_toTopOf="@+id/editTextPhoneNumber"
            app:layout_constraintStart_toStartOf="@+id/editTextAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextAddress" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@={createSurveyViewModel.phoneNumber}"
            app:layout_constraintBottom_toTopOf="@+id/editTextDate"
            app:layout_constraintStart_toStartOf="@+id/editTextPostCode"
            app:layout_constraintTop_toBottomOf="@+id/editTextPostCode" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/editTextPhoneNumber"
            app:layout_constraintTop_toBottomOf="@+id/editTextPhoneNumber" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>